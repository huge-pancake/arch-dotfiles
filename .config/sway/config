#--------#
# global #
#--------#
include @sysconfdir@/sway/config.d/*

#------------#
# appearence #
#------------#
include catppuccin-mocha

# target                 title     bg    text   indicator  border
client.focused           $pink     $base $text  $rosewater $pink
client.focused_inactive  $mauve    $base $text  $rosewater $overlay2
client.unfocused         $mauve    $base $text  $rosewater $overlay0
client.urgent            $peach    $base $peach $overlay0  $mauve
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base

smart_borders on
default_border pixel 4
default_floating_border pixel 4
gaps inner 8
gaps outer 2

# output * bg /home/pancak/.local/share/backgrounds/nacho.jpg fill
output * bg /home/pancak/.local/share/backgrounds/Street.jpg fill

# font JetBrainsMono Nerd Font 10

set $gnome-schema org.gnome.desktop.interface
exec_always {
  gsettings set $gnome-schema gtk-theme 'Catppuccin-Mocha-Standard-Rosewater-Dark'
  gsettings set $gnome-schema icon-theme 'Papirus-Dark'
  gsettings set $gnome-schema cursor-theme 'Catppuccin-Mocha-Dark-Cursors'
  gsettings set $gnome-schema font-name 'JetBrainsMono Nerd Font 12'
}


#-------------#
# startup env #
#-------------#
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
xwayland enabled


#-----------#
# variables #
#-----------#
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term kitty
set $menu wofi --show run


#-----------#
# autostart #
#-----------#
exec --no-startup-id fcitx5 -d --replace
exec wl-paste -t text --watch clipman store
exec mako


#---------#
# devices #
#---------#
input type:keyboard {
  xkb_layout us
  repeat_delay 300
  repeat_rate 30
}

input type:touchpad {
  dwt enabled
  accel_profile adaptive
  pointer_accel 0.3
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}

seat * hide_cursor 8000

bindswitch --reload --locked lid:on output eDP-1 disable
bindswitch --reload --locked lid:off output eDP-1 enable


#----------#
# swayidle #
#----------#
exec swayidle -w \
  timeout 300 'swaylock -f' \
  timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
  before-sleep 'swaylock -f'


#--------------#
# window rules #
#--------------#
for_window [app_id="termfloat"]      floating enable
for_window [app_id="termfloat"]      resize set height 480
for_window [app_id="termfloat"]      resize set width 800

for_window [app_id="mpv"]            floating enable 
for_window [app_id="mpv"]            resize set height 480
for_window [app_id="mpv"]            resize set width 800


#-------------#
# keybindings #
#-------------#
bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec $term --class="termfloat"
bindsym $mod+q kill
bindsym $mod+d exec $menu
bindsym $mod+Shift+v exec clipman pick -t wofi
bindsym $mod+Shift+r reload
bindsym $mod+Shift+q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
floating_modifier $mod normal

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

bindsym $mod+b splith
bindsym $mod+v splitv

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle

bindsym $mod+a focus parent
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

mode "resize" {
  bindsym $left resize shrink width 10px
  bindsym $down resize grow height 10px
  bindsym $up resize shrink height 10px
  bindsym $right resize grow width 10px
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bindsym $mod+Escape exec wlogout
bindsym $mod+x exec swaylock


#---------------------#
# special keybindings #
#---------------------#
bindsym XF86AudioRaiseVolume exec pamixer -i 2
bindsym XF86AudioLowerVolume exec pamixer -d 2
bindsym XF86AudioMute exec pamixer -t

# This needs `sudo chmod +s /usr/bin/light`
bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86MonBrightnessUp exec light -A 5

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym Print exec grim $(xdg-user-dir PICTURES)/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png && wl-copy < $(xdg-user-dir PICTURES)/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png
bindsym $mod+Print exec grim -g "$(slurp)" $(xdg-user-dir PICTURES)/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png && wl-copy < $(xdg-user-dir PICTURES)/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png


#----------------------#
# waybar & keybindings #
#----------------------#
bar {
  swaybar_command waybar
}
bindsym $mod+o exec killall -SIGUSR1 waybar
